<style>
    .container{
        background-color: grey;
    }
</style>

<div class="logInDiv">
    <div class="logInDivFrame2">
        <img src="../img/back.png" class="backIcon"/>
        <div class="signUpDiv">
            <h3>Sign Up</h3>
            <form class="signInForm">
                <input type="email" name="email" class="emailForm" placeholder="E-mail"><br><br>
                <input type="password" name="password" class="passwordForm" placeholder="Password">
            </form>
            <div class="signUpButton">Submit</div>
        </div>
    </div>
    <div class="logInDivFrame3">
        <div class="addTaskDiv">
            <h3>Creating your task</h3>
            <form class="addTaskForm">
                <input type="text" name="title" class="textBoxForm" placeholder="Title"><br><br>
                <textarea name="description" rows="5" cols="30" class="textAreaForm" placeholder="Describe this task"></textarea>
                <input type="text" name="deadline" class="textBoxForm" placeholder="Deadline">
            </form>
            <div class="addTaskButton">Submit</div>
        </div>
    </div>
    <div class="logInDivFrame1">
        <div class="registrationDiv">
            <h3>Sign Up</h3>
            <p>If you have no an account, click the button below :)</p>
            <div class="registrationButton">Let's go!</div>
        </div>
        <hr class="verticalLine">
        <div class="signInDiv">
            <h3>Sign In</h3>
            <form class="signInForm">
                <input type="email" name="email" class="emailForm" placeholder="E-mail"><br><br>
                <input type="password" name="password" class="passwordForm" placeholder="Password">
            </form>
            <div class="signInButton">Submit</div>
        </div>
    </div>
</div>

{{#section 'jquery'}}
    <script>
        $(window).resize(function () {
            var $signInDiv = $(".signInDiv");
            var $logInDivFrame1 = $(".logInDivFrame1");
            if (Number($logInDiv.css("width").slice(0, -2)) === 400) {
                $logInDiv.css({height: "600px"});
                $logInDivFrame1.css("flexDirection", "column");
                $logInDivFrame1.children(".registrationDiv").css({margin: "5% auto 1px auto", width: "90%"});
                $logInDivFrame1.children(".signInDiv").css({margin: "5% auto", width: "90%"});
                $logInDivFrame1.children(".verticalLine").css({height: "1px", width: "90%", margin: "0 auto"});
                $signInDiv.children(".signInButton").css("margin", "auto auto 0 auto");
                $(".signUpButton").css("width", "90%");
                $(".signUpForm").css("width", "90%");
                $(".container").css("height", "100%");
            }
            else {
                $logInDiv.css({height: "500px"});
                $logInDivFrame1.css("flexDirection", "row");
                $logInDivFrame1.children(".registrationDiv").css({margin: "auto 0 auto 5%", width: "40%"});
                $logInDivFrame1.children(".signInDiv").css({margin: "auto 5% auto 0", width: "40%"});
                $logInDivFrame1.children(".verticalLine").css({height: "450px", width: "1px", margin: "auto"});
                $signInDiv.children(".signInButton").css("margin", "20px auto");
                $(".signUpButton").css("width", "60%");
                $(".signUpForm").css("width", "60%");
                $(".container").css("height", "100vh");
            }
        });
    </script>
{{/section}}
